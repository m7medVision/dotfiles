{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "ctx7sk-72b49d78-8699-4729-989c-babbad890ba3"
      ],
      "enabled": true
    },
    "shadcn": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "shadcn@latest",
        "mcp"
      ]
    },
    "web-search": {
      "type": "local",
      "command": [
        "npx",
        "open-websearch@latest"
      ],
      "enabled": true,
      "environment": {
        "MODE": "stdio",
        "DEFAULT_SEARCH_ENGINE": "duckduckgo",
        "ALLOWED_SEARCH_ENGINES": "duckduckgo,bing,exa"
      }
    },
    "arxiv-mcp-server": {
      "type": "local",
      "command": [
        "uv",
        "tool",
        "run",
        "arxiv-mcp-server",
        "--storage-path",
        "/path/to/paper/storage"
      ],
      "enabled": true
    },
    "mcp-deepwiki": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-deepwiki@latest"
      ],
      "enabled": true
    },
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "react-design-systems": {
      "type": "local",
      "command": [
        "npx",
        "@agentience/react-design-systems-mcp"
      ],
      "enabled": true
    }
  }
}
